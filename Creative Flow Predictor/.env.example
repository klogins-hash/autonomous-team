```
# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/creative_flow
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=40

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_CLUSTER_NODES=localhost:6379,localhost:6380,localhost:6381

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_ENV=production
SECRET_KEY=your-secret-key-here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# ML Model Configuration
MODEL_PATH=/models/creative_predictor_v1.pkl
PREDICTION_CONFIDENCE_THRESHOLD=0.75
PATTERN_ANALYSIS_WINDOW_DAYS=90

# Storage Configuration
STORAGE_BUCKET=creative-flow-assets
STORAGE_REGION=fr-par
STORAGE_ENDPOINT=https://s3.fr-par.scw.cloud

# Cartesia Voice Configuration
CARTESIA_API_KEY=your-cartesia-key
CARTESIA_VOICE_ID=default

# Monitoring
SENTRY_DSN=your-sentry-dsn
LOG_LEVEL=INFO
ENABLE_METRICS=true

# Feature Flags
ENABLE_VOICE_INSIGHTS=true
ENABLE_COLLABORATIVE_PATTERNS=false
ENABLE_ADVANCED_ANALYTICS=true
