```
# Application
APP_NAME=Personal Insight Engine
APP_VERSION=1.0.0
DEBUG=false
ENVIRONMENT=production

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production
ENCRYPTION_KEY=your-encryption-key-32-chars-long
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Database
DATABASE_URL=postgresql://insight_user:insight_password@localhost:5432/insight_engine
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10
DATABASE_POOL_RECYCLE=3600

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_TTL=3600

# External Services
OPENAI_API_KEY=sk-your-openai-key-here
OPENAI_MODEL=gpt-4
VOICE_PROVIDER=openai  # openai or local

# Features
ENABLE_VOICE_CAPTURE=true
ENABLE_ACTIVITY_TRACKING=true
ENABLE_PATTERN_ANALYSIS=true
ENABLE_INSIGHT_GENERATION=true

# Processing
PATTERN_ANALYSIS_INTERVAL=3600  # seconds
INSIGHT_GENERATION_INTERVAL=86400  # seconds
MAX_VOICE_DURATION=600  # seconds
MAX_ENTRY_LENGTH=50000  # characters

# Celery
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# Monitoring
SENTRY_DSN=
PROMETHEUS_ENABLED=true
LOG_LEVEL=INFO

# CORS
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["*"]
CORS_ALLOW_HEADERS=["*"]

# File Storage
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE=104857600  # 100MB

# Privacy
DATA_RETENTION_DAYS=365
ANONYMIZATION_ENABLED=true
ENCRYPTION_ENABLED=true
```